import BaseLayout from "../layouts/BaseLayout.astro"
---

<BaseLayout title="Wohnung 1">
    <section id="room-top-section">
        <section id="room-slider">
          <div class="items">
            <div class="img-container" data-bg-img="/1/1-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/2-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/3-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/4-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/5-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/6-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/7-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/8-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/9-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/10-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/11-min.jpg"></div>
          </div>
          <div class="items">
            <div class="img-container" data-bg-img="/1/12-min.jpg"></div>
          </div>
        </section>
        <div class="inner-container container">
          <div class="room-title-box">
            <h1 class="title">Ferienwohnung I</h1>
            <div class="price">
              <div class="title">ab:</div>
              <div class="value">75€</div>
            </div>
          </div>
        </div>
      </section>

      <section class="room-desc">
        <div class="inner-container container">
          <div class="l-sec col-md-8">
            <div class="amenities">
              <ul class="list-inline clearfix">
                <li class="col-md-6">
                  <div class="title">Größe:</div>
                  <div class="value">56 m²</div>
                </li>
                <li class="col-md-6">
                  <div class="title">Personen:</div>
                  <div class="value">max. 4</div>
                </li>
                <li class="col-md-6">
                  <div class="title">Zimmer:</div>
                  <div class="value">2+</div>
                </li>
                <li class="col-md-6">
                  <div class="title">Betten:</div>
                  <div class="value">2 (Doppel)</div>
                </li>
                <li class="col-md-6">
                  <div class="title">Anreise:</div>
                  <div class="value">14.00 bis 19.00 Uhr</div>
                </li>
                <li class="col-md-6">
                  <div class="title">Abreise:</div>
                  <div class="value">bis 10.00 Uhr</div>
                </li>
              </ul>
            </div>
            <div class="description">
              <p>
                Im Wohnzimmer verweilen Sie auf einem bequemen Ledersofa und
                dazu passendem Ledersessel, an einem Esstisch für 4 Personen mit
                4 antiken Stühlen oder an einem Schreibtisch, auf einem 1,40m x
                1,90m großen französischen Doppelbett. Fernsehen können Sie auf
                einem Flachbild-TV.
              </p>
              <p>
                Im Schlafzimmer finden Sie einen großen Kleiderschrank, ein
                1.80m x 2.00m großes französisches Doppelbett, 2 Nachttische mit
                je einer Lampe für gemütliches Lesen im Bett, Bettwäsche und
                einen Staubsauger.
              </p>
              <p>
                Für die Köchinnen und Köche befinden sich in der umfangreich
                ausgestatteten Küche unter anderem ein Toaster, eine
                Kaffemaschine, Wasserkocher, kleiner akkubetriebener
                Handstaubsauger, Cerankochfeld, Backofen, Kühlschrank mit
                Gefrierfach, Geschirrspüler und entsprechende Taps, Besteck,
                Kochutensilien, Gläser, Geschirr, diverse Reinigungsmaterialien,
                sowie Handtücher.
              </p>
              <p>
                Das Bad ist ausgestattet mit Dusche und WC, Föhn, Handtüchern,
                einem kleinen Kosmetikmülleimer, Duschvorlage,
                Vergrößerungsspiegel, Handseife und Toilettenpapier.
              </p>
              <p>
                Ein WLAN-Zugang ist in der gesamten Wohnung verfügbar.
              </p>
            </div>
          </div>
          <div style={{ marginTop: "30px" }} class="r-sec col-md-4">
            <div class="room-rating">
              <div class="ravis-title-t-2">
                <div class="title">
                  <span>Wohnung 2</span>
                </div>
              </div>
              <div class="room-container clearfix">
                <div
                  class="room-box animated-box"
                  data-animation="fadeInUp"
                >
                  <div class="inner-box" data-bg-img="/2/1.jpg">
                    <a href="/wohnung-2" class="more-info"></a>
                    <div class="caption">
                      <div class="title">Wohnung 2</div>
                      <div class="price">
                        <div class="title">ab:</div>
                        <div class="value">70 €</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</BaseLayout>
